@model Gcc.Models.Produto

@{
    ViewBag.Title = "Editar Produto";
}
<div class="container">
    <h2>Editar Produto</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.GrupoID)
        @Html.HiddenFor(model => model.ProdutoID)

        <div class="row">
            <div class="form-group col-lg-6 col-md-6 col-xs-12">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Nome)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nome)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Descricao)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descricao)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.UnidadeMedida)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.UnidadeMedida, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UnidadeMedida)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Link)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Link)
                </div>
            </div>
        </div>

        <div class="row top30">
            <div class="col-md-3 col-lg-3 col-xs-3">
                <button type="button" class="add btn btn-primary" data-divname="caracteristicas" data-url="/Produto/AdicionarCaracteristica">Adicionar Caracteristica</button>
            </div>
        </div>

        <div class="row top30 caracteristicas">
            @foreach (var caracteristica in Model.Caracteristicas)
            {
                @Html.Partial("_CriarCaracteristica", caracteristica);
            }
        </div>

        <div class="row top30">
            <div class="col-md-3 col-lg-3 col-xs-3">
                <button type="submit" class="btn btn-success" value="Editar">Salvar</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
