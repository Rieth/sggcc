@model Gcc.Models.Caracteristica

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginCollectionItem("Caracteristicas"))
{
    <div class="row top30">
        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TipoMedida)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.TipoMedida, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipoMedida)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Valor)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor2)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Valor2, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Valor2)
        </div>         
     </div>
}
