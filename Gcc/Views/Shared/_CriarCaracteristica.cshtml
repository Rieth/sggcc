@model Gcc.Models.Caracteristica

@{ var id = Guid.NewGuid().ToString();
}

@using Gcc.Web.Helpers

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginCollectionItem("Caracteristicas"))
{
    if (Model.CaracteristicaID != 0)
    {
        @Html.HiddenFor(model => model.CaracteristicaID)
    }
    
    @Html.HiddenFor(model => model.ProdutoID)

    <div class="col-md-12 col-lg-12 col-xs-12 form-inline">
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Nome)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
    </div>
}

