@model IEnumerable<Gcc.Models.Grupo>

@{
    ViewBag.Title = "Index";
}

@for (int i = 0; i < Model.Count(); i += 3)
{
    <div class="row top30">
        @for (int j = 0; j < 3; j++)
        {
            if ((Model.ElementAtOrDefault(i + j) != null))
            {
                @*<div class="col-md-4 col-lg-4 col-sm-4">*@
                    @Html.Partial("~/Views/Grupo/Card.cshtml", Model.ElementAtOrDefault(i + j))
                @*</div>*@
            }
        }
    </div>
}

<div class="modal" id="modal">

</div>

