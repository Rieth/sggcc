@model Gcc.Models.Enquete
@{ var id = Guid.NewGuid().ToString(); }

@using Gcc.Web.Helpers

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginCollectionItem("Enquetes"))
{
    @Html.HiddenFor(model => model.EnqueteID)
    @Html.HiddenFor(model => model.Nome)
    @Html.HiddenFor(model => model.GrupoID)

    @*<div class="modal" id="modal">

        </div>*@

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="card">
            <img class="card-img-top" height="200" src="https://www.accenture.com/t00010101T000000w320/gb-en/_acnmedia/Accenture/Conversion-Assets/DotCom/Images/Global/Digital_15/Accenture-PE-icon-1-320.png" alt="Grupo Logo">
            <div class="card-block">
                <h4 class="card-title">@Model.Nome</h4>
                <button type="button" class="open-modal btn btn-danger btn-block" onclick="location.href='@Url.Action("Votar", "Enquete", new { id = @Model.EnqueteID })';">Votar</button>
                <button type="button" class="open-modal btn btn-success btn-block" onclick="location.href='@Url.Action("Detalhes", "Enquete", new { id = @Model.EnqueteID })';">Detalhes</button>
                @*<button type="button" class="open-modal btn btn-danger btn-block" data-path="/Enquete/Votar/@Model.EnqueteID">Votar</button>
                    <button type="button" class="open-modal btn btn-success btn-block" data-path="/Enquete/Detalhes/@Model.EnqueteID">Detalhes</button>*@
                @if (Roles.IsUserInRole("EDITAR_GRUPO_" + @Model.GrupoID))
                {
                    <button type="button" class="btn btn-primary btn-block" onclick="location.href='@Url.Action("Editar", "Enquete", new { id = @Model.EnqueteID })';">Editar</button>
                }
            </div>
        </div>
    </div>
}
